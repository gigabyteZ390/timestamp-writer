{
  "manifest_version": 3,
  "name": "timestamp-writer",
  "version": "1.0",
  "description": "Write the timestamp in a customed way",
  "icons": {
    "16": "icons/extension_icon@16px.png",
    "48": "icons/extension_icon@48px.png",
    "128": "icons/extension_icon.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/extension_icon@48px.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["storage", "tabs", "scripting", "commands", "activeTab"],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "commands": {
  "insert-timestamp": {
    "suggested_key": {
      "default": "Ctrl+Shift+Z"
    },
    "description": "Insert timestamp at cursor"
  }
  }
}
